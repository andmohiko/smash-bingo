rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 送られてきたリクエストのデータ
    function requestData() {
      return request.resource.data;
    }

    function isValidRoomSchema(requestData) {
      return requestData.size() == 5
        && 'card1State' in requestData && (requestData.card1State is string || requestData.card1State == null)
        && 'card2State' in requestData && (requestData.card2State is string || requestData.card2State == null)
        && 'createdAt' in requestData && requestData.createdAt is timestamp
        && 'passcode' in requestData && requestData.passcode is string
        && 'createdAt' in requestData && requestData.createdAt is timestamp;
    }

    match /rooms/{roomId} {
      allow read;
      allow create, update: if isValidRoomSchema(requestData());
    }
  }
}
